<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:controller="com.example.escriturarapidajuego.controller.Controller"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" layoutX="-5.0" layoutY="-5.0" prefHeight="164.0" prefWidth="606.0" style="-fx-background-color: #007566; -fx-border-width: 4;">
         <children>
            <Label alignment="TOP_CENTER" graphicTextGap="12.0" text="˗ˏˋ ★ ˎˊ˗ Escritura Rapida ˗ˏˋ ★ ˎˊ˗" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Button layoutX="235.0" layoutY="190.0" mnemonicParsing="false"
              prefHeight="50.0" prefWidth="131.0" style="-fx-background-color: #007566;
              -fx-border-radius: 8; -fx-border-width: 3; -fx-border-color: #007566;"
              text="Jugar" textFill="WHITE"  fx:id="playButton" onAction="#onPlay">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button layoutX="236.0" layoutY="257.0" mnemonicParsing="false"
              prefHeight="50.0" prefWidth="131.0" style="-fx-background-color: #007566;
              -fx-border-radius: 8; -fx-border-width: 3;"
              text="Ayuda" textFill="WHITE" fx:id="helpButton" onAction="#onHelp" >
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button layoutX="236.0" layoutY="323.0" mnemonicParsing="false"
              prefHeight="50.0" prefWidth="131.0" style="-fx-background-color: #007566;
               -fx-border-radius: 8; -fx-border-width: 3;"
              text="Salir" textFill="WHITE" fx:id="exitGameButton" onAction="#onExitGame">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
   </children>
</Pane>
